header.site-header
  .brand-header.wrapper
    label(for="mobile-nav").mobile-nav-toggle
      i.icon

    a.site-logo(href="/") {{ site.name }}

    .secondary-nav
      a.nav--tel(href="tel:{{ site.contact.tel.value }}")
        i.icon--tel
        | {{ site.contact.tel.display }}

      a.nav--upload(href="#")
        i.icon--upload
        span Secure File
        | Upload

      a.nav--facebook(href="#")
        i.icon--facebook
        span.image-replacement Facebook

      a.nav--twitter(href="#")
        i.icon--twitter
        span.image-replacement Twitter

      a.nav--linkedin(href="#")
        i.icon--linkedin
        span.image-replacement Linkedin

  | {% include components/site-nav %}
